<p id="notice"><%= notice %></p>

<form>
<div class="form-group col-4">
    <%= label_tag nil, @coin.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.description, class:"form-control", disabled: true %>
  </div>

  <div class="form-group col-4">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class:"form-control", disabled: true%>
  </div>

  <div class="form-group col-10">
    <%= label_tag nil, @coin.class.human_attribute_name(:url) %>
    <%= text_field_tag nil, @coin.url, class:"form-control", disabled: true%>
  </div>

  <div class="form-group col-4">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type) %>
    <%= text_field_tag nil, @coin.mining_type.descryption, class:"form-control", disabled: true %>
    <%#= image_tag coin.url, width:25, hegth:25 %>
  </div>
</form>

<%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-primary" %> |
