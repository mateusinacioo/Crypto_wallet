<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-4">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder:"Bitcoin" %>
  </div>

  <div class="form-group col-4">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"BTC" %>
  </div>

  <div class="form-group col-4">
    <%= form.label :url %>
    <%= form.text_field :url, class:"form-control", placeholder:"http://img.url/biticoin.png" %>
    <%#= image_tag coin.url, width:25, hegth:25 %>
  </div>

  <div class="form-group col-4">
    <%= form.label :mining_type %>
    <%= form.select("mining_type_id", @mining_type_options, {include_blank: true}, class:"form-control")%>
  </div>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-success"%>
  </div>
<% end %>
